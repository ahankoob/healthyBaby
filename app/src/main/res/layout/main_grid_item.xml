<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/linearLayout"
    android:textAlignment="center"
    android:gravity="center"
    android:background="@color/mainmenu5Primary"
    android:layout_margin="10dp">

    <com.andexert.library.RippleView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/more"

        app:rv_type="rectangle"
        app:rv_zoom="true"
        app:rv_zoomScale="1.05"
        app:rv_ripplePadding="100dp"
        app:rv_centered="true"
        android:gravity="center">

        <ImageView
            android:layout_width="@dimen/menuImageDimen"
            android:layout_height="@dimen/menuImageDimen"
            android:id="@+id/gridview_image"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/gridview_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Grid View Item"
            android:textStyle="bold"
            style="@style/textShadow"
            android:background="@color/mainmenu5secondery"
            android:layout_below="@+id/gridview_image"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </com.andexert.library.RippleView>
</LinearLayout>


