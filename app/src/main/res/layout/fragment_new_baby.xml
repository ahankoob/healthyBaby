<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ariansoft.healthybaby.Activities.babySelector$PlaceholderFragment"
    android:background="@color/background3">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/step1"
        android:visibility="visible">
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/gender"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="5dp"
            android:textAlignment="center"

            >
            <RadioButton
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:textAlignment="center"
                android:text="دختر"
                android:button="@null"
                android:checked="false"
                android:drawableRight="@drawable/girl_icon_selector"
                android:id="@+id/isGirl"
                />
            <RadioButton
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:textAlignment="center"
                android:id="@+id/isBoy"
                android:text="‍‍پسر"
                android:button="@null"
                android:checked="false"
                android:drawableRight="@drawable/boy_icon_selector"
                />
        </RadioGroup>
        <com.beardedhen.androidbootstrap.BootstrapEditText
            android:id="@+id/babyName"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            app:bootstrapBrand="primary"
            android:hint="@string/babyName"
            android:textDirection="rtl"
            android:padding="@dimen/bootstrap_edit_text_hori_padding"
            android:textSize="@dimen/bootstrap_edit_text_default_font_size"
            android:layout_below="@+id/gender"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <com.beardedhen.androidbootstrap.BootstrapEditText
            android:id="@+id/babyAge"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            app:bootstrapBrand="primary"
            android:hint="@string/babyBirthDate"
            android:textDirection="rtl"
            android:layout_below="@+id/babyName"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp" />
        <com.beardedhen.androidbootstrap.BootstrapButton
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:id="@+id/step1BTN"
            android:text="مرحله بعد"
            app:bootstrapBrand="success"
            android:layout_alignParentBottom="true"
            android:drawableRight="@drawable/ic_forward_white_24dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/step2"
        android:visibility="gone"
        android:layout_gravity="center_vertical">
        <com.beardedhen.androidbootstrap.BootstrapButton
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:id="@+id/step1BTN1"
            android:text="مرحله قبل"
            app:bootstrapBrand="regular"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:drawableLeft="@drawable/ic_undo_white_24dp"
            />
        <com.beardedhen.androidbootstrap.BootstrapCircleThumbnail
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:bootstrapBrand="info"
            app:hasBorder="true"
            android:id="@+id/profileIMG"
            android:layout_marginTop="118dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"></com.beardedhen.androidbootstrap.BootstrapCircleThumbnail>
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/horizontalScrollView"
            android:layout_gravity="center_vertical"

            android:layout_below="@+id/profileIMG"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="40dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingLeft="100dp"
                >
                <com.beardedhen.androidbootstrap.BootstrapCircleThumbnail
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:id="@+id/cameraBTN"
                    android:src="@drawable/camera"
                    android:layout_margin="5dp"
                    app:bootstrapBrand="info"
                    app:hasBorder="true"
                    ></com.beardedhen.androidbootstrap.BootstrapCircleThumbnail>

                <com.beardedhen.androidbootstrap.BootstrapCircleThumbnail
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:id="@+id/galleryBTN"
                    android:src="@drawable/gallery"
                    android:layout_margin="5dp"
                    app:bootstrapBrand="info"
                    app:hasBorder="true"
                    ></com.beardedhen.androidbootstrap.BootstrapCircleThumbnail>

                <com.beardedhen.androidbootstrap.BootstrapCircleThumbnail
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/boy1"
                    android:layout_margin="5dp"
                    app:bootstrapBrand="info"
                    app:hasBorder="true"
                    android:id="@+id/profileIMG1"
                    ></com.beardedhen.androidbootstrap.BootstrapCircleThumbnail>

                <com.beardedhen.androidbootstrap.BootstrapCircleThumbnail
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/boy2"
                    android:layout_margin="5dp"
                    app:bootstrapBrand="info"
                    app:hasBorder="true"
                    android:id="@+id/profileIMG2"
                    ></com.beardedhen.androidbootstrap.BootstrapCircleThumbnail>

                <com.beardedhen.androidbootstrap.BootstrapCircleThumbnail
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/boy3"
                    android:layout_margin="5dp"
                    app:bootstrapBrand="info"
                    app:hasBorder="true"
                    android:id="@+id/profileIMG3"
                    ></com.beardedhen.androidbootstrap.BootstrapCircleThumbnail>
                <com.beardedhen.androidbootstrap.BootstrapCircleThumbnail
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/boy4"
                    android:layout_margin="5dp"
                    app:bootstrapBrand="info"
                    app:hasBorder="true"
                    android:id="@+id/profileIMG4"
                    ></com.beardedhen.androidbootstrap.BootstrapCircleThumbnail>
                <com.beardedhen.androidbootstrap.BootstrapCircleThumbnail
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/girl1"
                    android:layout_margin="5dp"
                    app:bootstrapBrand="info"
                    app:hasBorder="true"
                    android:id="@+id/profileIMG5"
                    ></com.beardedhen.androidbootstrap.BootstrapCircleThumbnail>
                <com.beardedhen.androidbootstrap.BootstrapCircleThumbnail
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/girl2"
                    android:layout_margin="5dp"
                    app:bootstrapBrand="info"
                    app:hasBorder="true"
                    android:id="@+id/profileIMG6"
                    ></com.beardedhen.androidbootstrap.BootstrapCircleThumbnail>
                <com.beardedhen.androidbootstrap.BootstrapCircleThumbnail
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/girl3"
                    android:layout_margin="5dp"
                    app:bootstrapBrand="info"
                    app:hasBorder="true"
                    android:id="@+id/profileIMG7"
                    ></com.beardedhen.androidbootstrap.BootstrapCircleThumbnail>
                <com.beardedhen.androidbootstrap.BootstrapCircleThumbnail
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/girl4"
                    android:layout_margin="5dp"
                    app:bootstrapBrand="info"
                    app:hasBorder="true"
                    android:id="@+id/profileIMG8"
                    ></com.beardedhen.androidbootstrap.BootstrapCircleThumbnail>

            </LinearLayout>

        </HorizontalScrollView>
        <com.beardedhen.androidbootstrap.BootstrapButton
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:id="@+id/saveBTN"
            android:text="ذخیره"
            app:bootstrapBrand="regular"
            android:layout_alignParentBottom="true"
            android:drawableRight="@drawable/ic_done_white_24dp"
            />
    </RelativeLayout>

</RelativeLayout>
